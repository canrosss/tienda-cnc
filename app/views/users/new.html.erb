<h1>Editando un user existente</h1>
<div class="container marketing" style="margin-top: 10px">
  <div class="row">
    <div class="col-xs-12">
        <h2>Los siguientes errores impiden la creación del user</h2>
    </div>
  </div>
      <% if @user.errors.any? %>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
          <% end %>
        </ul>
      <% end %>

      <%= form_for @user do |f| %>
        <p>
          <%= f.label :username %> </br>
          <%= f.text_field :username %> </br>
        </p>

        <p>
          <%= f.label :email %> </br>
          <%= f.text_area :email %> </br>
        </p>
        <p>
          <%= f.label :password %> </br>
          <%= f.password_field :password %> </br>
        </p>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-8">
                <%= f.submit(@user.new_record? ? "Añadir user" : "Actualizar user", class: 'btn btn-primary btn-lg') %>
              </div>
            </div>

      <% end %>
</div>
