<div class="form-container">
     <h1>Editando un producto existente</h1>

     <%= form_for(@product, :html => {class: 'form-horizontal', role:"form"}) do |f|  %>
      <div class="form-group">
         <%= f.label :name , class: "col-sm-2 control-label"%> </br>
         <div class="col-sm-8">
              <%= f.text_field :name, class: "form-control"%> </br>
         </div>
      </div>

      <div class="form-group">
         <%= f.label :summary, class: "col-sm-2 control-label" %> </br>
         <div class="col-sm-8">
              <%= f.text_area :summary, class: "form-control"%> </br>
         </div>
      </div>

      <div class="form-group">
         <%= f.label :description, class: "col-sm-2 control-label" %> </br>
         <div class="col-sm-8">
              <%= f.text_area :description, class: "form-control"%> </br>
         </div>
      </div>

      <div class="form-group">
         <%= f.label :body, class: "col-sm-2 control-label" %> </br>
         <div class="col-sm-8">
              <%= f.text_area :body, class: "form-control" %> </br>
         </div>
      </div>

      <div class="form-group">
         <%= f.label :image1, class: "col-sm-2 control-label" %> </br>
         <div class="col-sm-8">
              <%= f.text_field :image1, class: "form-control" %> </br>
         </div>
      </div>

      <div class="form-group">
         <%= f.label :image2, class: "col-sm-2 control-label" %> </br>
         <div class="col-sm-8">
              <%= f.text_field :image2 , class: "form-control"%> </br>
         </div>
      </div>

      <div class="form-group">
         <%= f.label :image3, class: "col-sm-2 control-label" %> </br>
         <div class="col-sm-8">
              <%= f.text_field :image3, class: "form-control" %> </br>
         </div>
      </div>

      <div class="form-group">
         <%= f.label :image4, class: "col-sm-2 control-label" %> </br>
         <div class="col-sm-8">
              <%= f.text_field :image4, class: "form-control" %> </br>
         </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit(@product.new_record? ? "Añadir producto" : "Actualizar producto", class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    <% end %>

</div>

     <% if @product.errors.any? %>
      <h2>Los siguientes errores impiden la creación del producto</h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    <% end %>



