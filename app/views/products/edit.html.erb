


<div class="container">


<h1>Editando un producto existente</h1>
      <% if @product.errors.any? %>
        <h2>Los siguientes errores impiden la creaci칩n del producto</h2>
        <ul>
          <% @product.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
          <% end %>
        </ul>
      <% end %>

        <%= form_for @product, :html => { role: "form"}  do |f| %>
        <p>
          <%= f.label :name, :class=>"sr-only" %> </br>
          <%= f.text_field :name, placeholder: "Nombre del producto", :class=>"form-control" %> </br>
        </p>

        <p>
          <%= f.label :summary, :class=>"sr-only" %> </br>
          <%= f.text_area :summary, placeholder: "Resumen del producto", :class=>"form-control" %> </br>
        </p>

        <p>
          <%= f.label :description, :class=>"sr-only" %> </br>
          <%= f.text_area :description, placeholder: "Introduce la descripci칩n del producto", :class=>"form-control" %> </br>
        </p>

        <p>
          <%= f.label :body, :class=>"sr-only" %> </br>
        <%= f.text_area(:body, placeholder: "Introduce la descripci칩n completa del producto", :size=>"90",  :class=>"form-control") %> </br>
        </p>

        <p>
          <%= f.label :image1, :class=>"sr-only" %> </br>
        <%= f.text_field :image1, placeholder: "Nombre de la imagen 1", :class=>"form-control" %> </br>
        </p>

        <p>
          <%= f.label :image2, :class=>"sr-only" %> </br>
          <%= f.text_field :image2, placeholder: "Nombre de la imagen 2", :class=>"form-control"  %> </br>
        </p>

        <p>
          <%= f.label :image3, :class=>"sr-only" %> </br>
          <%= f.text_field :image3, placeholder: "Nombre de la imagen 3", :class=>"form-control" %> </br>
        </p>

        <p>
          <%= f.label :image4, :class=>"sr-only" %> </br>
          <%= f.text_field :image4, placeholder: "Nombre de la imagen 4", :class=>"form-control"%> </br>
        </p>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-8 center">
                <%= f.submit(@product.new_record? ? "A침adir producto" : "Actualizar producto", class: 'btn btn-primary btn-lg') %>
              </div>
            </div>
      <% end %>
           <hr class="featurette-divider">
